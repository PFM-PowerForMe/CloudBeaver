{
  "extends": "@cloudbeaver/tsconfig/tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "tsBuildInfoFile": "lib/tsconfig.tsbuildinfo",
    "composite": true
  },
  "references": [
    {
      "path": "../../../common-typescript/@dbeaver/cli"
    },
    {
      "path": "../core-cli"
    },
    {
      "path": "../tests-runner"
    }
  ],
  "include": [
    "__custom_mocks__/**/*",
    "src/**/*",
    "src/**/*.json",
    "src/**/*.css",
    "src/**/*.scss"
  ],
  "exclude": [
    "**/node_modules",
    "lib/**/*"
  ]
}
